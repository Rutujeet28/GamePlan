<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonModify"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/button_shape"
        android:text="Modify"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEventName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewEventName" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_shape"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEventName"
        app:layout_constraintEnd_toEndOf="@+id/textViewEventName"
        app:layout_constraintStart_toEndOf="@+id/buttonModify"
        app:layout_constraintTop_toTopOf="@+id/textViewEventName" />

</androidx.constraintlayout.widget.ConstraintLayout>
